    <h1 class="text-4xl ml-10 mt-5">This is Edit page</h1>
    <form action="/edit" method="post">
        <input class="w-2/4 border border-white p-10 mt-5 ml-10" type="text" placeholder="Enter old name of file" value="<%= filename %>" name="previous">
        <input class="w-2/4 border border-white p-10 mt-5 ml-10" type="text" placeholder="Enter new name of file" name="new">
        <button class=" block bg-blue-500 w-1/4 border border-white p-10 mt-5 ml-10">Change</button>
    </form>
